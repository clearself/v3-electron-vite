{
    "name": "v3-electron",
    "version": "0.0.7",
    "main": "dist/main/index.cjs",
    "author": "nevlf<2863180001@qq.com>",
    "description": "electron",
    "license": "MIT",
    "keywords": [
        "vite2",
        "electron",
        "vue3",
        "pinia",
        "rollup"
    ],
    "engines": {
        "node": ">=16.0.0"
    },
    "env": {
        "host": "127.0.0.1",
        "port": 9090,
        "title": "v3-electron"
    },
    "scripts": {
        "dev": "node .electron-vue/dev-runner.mjs",
        "build": "node .electron-vue/build.mjs && electron-builder",
        "build:dir": "node .electron-vue/build.mjs && electron-builder --dir"
    },
    "build": {
        "productName": "v3-electron",
        "appId": "com.app.v3-electron",
        "directories": {
            "output": "build/v${version}"
        },
        "extraResources": [],
        "files": [
            "dist/**/*",
            "static/**/*"
        ],
        "asar": false,
        "nsis": {
            "oneClick": false,
            "perMachine": true,
            "shortcutName": "${productName}",
            "uninstallDisplayName": "${productName}",
            "runAfterFinish": true,
            "deleteAppDataOnUninstall": true,
            "allowToChangeInstallationDirectory": true
        },
        "publish": [
            {
                "provider": "generic",
                "url": ""
            }
        ],
        "mac": {
            "target": [
                "dmg",
                "zip"
            ],
            "icon": "static/icons/logo.icns"
        },
        "win": {
            "target": [
                "nsis"
            ],
            "icon": "static/icons/logo.ico",
            "artifactName": "${productName} v${version}.${ext}",
            "requestedExecutionLevel": "requireAdministrator"
        }
    },
    "dependencies": {
        "@electron/remote": "^2.0.5",
        "axios": "^0.26.0",
        "dayjs": "^1.10.7",
        "electron-log": "^4.4.6",
        "element-plus": "^2.1.8",
        "lodash": "^4.17.21",
        "pinia": "^2.0.13",
        "pinia-plugin-persist": "^1.0.0",
        "vue": "^3.2.31",
        "vue-router": "^4.0.12"
    },
    "devDependencies": {
        "@vitejs/plugin-vue": "^2.3.1",
        "cfonts": "^2.10.1",
        "chalk": "^5.0.0",
        "electron": "18.0.3",
        "electron-builder": "^22.14.13",
        "fast-glob": "^3.2.11",
        "sass": "^1.50.0",
        "typescript": "^4.5.5",
        "vite": "^2.9.1",
        "vite-plugin-svg-icons": "^2.0.1"
    }
}
