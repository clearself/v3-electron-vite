{
    "name": "electron-vue-vite",
    "version": "0.0.1",
    "main": "dist/main/index.cjs",
    "author": "nevlf<2863180001@qq.com>",
    "description": "electron",
    "license": "MIT",
    "keywords": [
        "vite2.x",
        "electron16.x",
        "vue3.x",
        "rollup"
    ],
    "engines": {
        "node": ">=16.0.0"
    },
    "env": {
        "host": "127.0.0.1",
        "port": 9090,
        "title": "electron-vue-vite"
    },
    "scripts": {
        "dev": "node .electron-vue/dev-runner.mjs",
        "build": "node .electron-vue/build.mjs && electron-builder",
        "build:dir": "node .electron-vue/build.mjs && electron-builder --dir"
    },
    "build": {
        "productName": "electron-vue-vite",
        "appId": "com.app.electron-vue-vite",
        "directories": {
            "output": "build/v${version}"
        },
        "extraResources": [
            "static/**/*"
        ],
        "files": [
            "dist/**/*"
        ],
        "asar": false,
        "nsis": {
            "oneClick": false,
            "perMachine": true,
            "shortcutName": "${productName}",
            "uninstallDisplayName": "${productName}",
            "runAfterFinish": true,
            "deleteAppDataOnUninstall": true,
            "allowToChangeInstallationDirectory": true
        },
        "publish": [
            {
                "provider": "generic",
                "url": ""
            }
        ],
        "mac": {
            "target": [
                "dmg",
                "zip"
            ],
            "icon": "static/icons/logo.icns"
        },
        "win": {
            "target": [
                "nsis"
            ],
            "icon": "static/icons/logo.ico",
            "artifactName": "${productName} v${version}.${ext}",
            "requestedExecutionLevel": "requireAdministrator"
        }
    },
    "dependencies": {
        "@electron/remote": "^2.0.1",
        "dayjs": "^1.10.7",
        "electron-log": "^4.4.4",
        "element-plus": "^1.3.0-beta.1",
        "vue": "^3.2.26",
        "vue-router": "^4.0.12",
        "vuex": "^4.0.2",
        "vuex-persistedstate": "^4.1.0"
    },
    "devDependencies": {
        "@vitejs/plugin-vue": "^1.9.4",
        "chalk": "^4.1.2",
        "electron": "16.0.0",
        "electron-builder": "^22.13.1",
        "sass": "^1.45.2",
        "typescript": "^4.4.4",
        "vite": "^2.6.14"
    }
}
