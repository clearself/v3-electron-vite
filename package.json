{
  "name": "v3-electron-vite",
  "version": "3.4.0-beta",
  "main": "dist/index.js",
  "author": "nevlf<2863180001@qq.com>",
  "description": "v3-electron-client",
  "license": "MIT",
  "keywords": [
    "vite3",
    "electron",
    "vue3",
    "pinia",
    "rollup"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "env": {
    "host": "127.0.0.1",
    "port": 13333,
    "title": "V3 Electron Vite",
    "identity": null,
    "provisioningProfile": "build/v3electron.provisionprofile",
    "entitlements": "build/entitlements.mac.plist",
    "entitlementsInherit": "build/entitlements.mac.plist",
    "afterSign": "build/notarize.js"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build && electron-builder",
    "build:dir": "vite build && electron-builder --dir",
    "build:x64": "vite build && electron-builder --arch=x64",
    "build:x32": "vite build && electron-builder --arch=ia32",
    "lint:eslint": "eslint --cache --max-warnings 0 \"src/**/*.{vue,js,ts,tsx}\" --fix",
    "lint:prettier": "prettier --write  \"src/**/*.{js,ts,json,tsx,css,less,scss,vue,html,md}\"",
    "lint": "yarn lint:eslint && yarn lint:prettier",
    "prepare": "husky install"
  },
  "build": {
    "productName": "v3-electron-vite",
    "appId": "com.app.v3-electron-vite",
    "directories": {
      "output": "release/v${version}"
    },
    "extraResources": [],
    "files": [
      "dist/**/*",
      "static/**/*"
    ],
    "asar": false,
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "shortcutName": "${productName}",
      "uninstallDisplayName": "${productName}",
      "runAfterFinish": true,
      "deleteAppDataOnUninstall": true,
      "allowToChangeInstallationDirectory": true
    },
    "publish": [
      {
        "provider": "generic",
        "url": ""
      }
    ],
    "mac": {
      "target": [
        "dmg"
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "provisioningProfile": "build/v3electron.provisionprofile",
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "icon": "static/icons/logo.icns",
      "artifactName": "${productName} ${version} ${platform} ${arch}.${ext}"
    },
    "dmg": {
      "sign": false
    },
    "win": {
      "icon": "static/icons/logo.ico",
      "artifactName": "${productName} v${version}.${ext}",
      "requestedExecutionLevel": "requireAdministrator"
    }
  },
  "dependencies": {
    "@electron/remote": "^2.0.9",
    "@element-plus/icons-vue": "^2.1.0",
    "@vue-macros/volar": "^0.9.8",
    "axios": "^1.4.0",
    "dayjs": "^1.11.7",
    "electron-log": "4.4.8",
    "electron-notarize": "^1.2.2",
    "element-plus": "^2.3.4",
    "lodash-es": "^4.17.21",
    "normalize.css": "^8.0.1",
    "nprogress": "^0.2.0",
    "path-browserify": "^1.0.1",
    "path-to-regexp": "^6.2.1",
    "pinia": "^2.0.36",
    "screenfull": "^6.0.2",
    "vue": "^3.2.47",
    "vue-router": "^4.1.6",
    "vxe-table": "^4.3.12",
    "vxe-table-plugin-element": "^3.0.6",
    "xe-utils": "^3.5.7"
  },
  "devDependencies": {
    "@types/lodash-es": "^4.17.7",
    "@types/node": "^20.1.1",
    "@types/nprogress": "^0.2.0",
    "@types/path-browserify": "^1.0.0",
    "@typescript-eslint/eslint-plugin": "^5.59.5",
    "@typescript-eslint/parser": "^5.59.5",
    "@vitejs/plugin-vue": "^4.2.1",
    "@vitejs/plugin-vue-jsx": "^3.0.1",
    "@vue/eslint-config-prettier": "^7.1.0",
    "@vue/eslint-config-typescript": "^11.0.3",
    "electron": "24.2.0",
    "electron-builder": "^23.6.0",
    "eslint": "^8.40.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-vue": "^9.11.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "sass": "^1.62.1",
    "terser": "^5.17.2",
    "typescript": "^5.0.4",
    "unocss": "^0.51.12",
    "unplugin-vue-define-options": "^1.3.5",
    "vite": "^4.3.5",
    "vite-electron-plugin": "^0.8.2",
    "vite-plugin-svg-icons": "^2.0.1",
    "vite-svg-loader": "^4.0.0",
    "vue-eslint-parser": "^9.2.1",
    "vue-tsc": "^1.6.4"
  },
  "lint-staged": {
    "*.{js,jsx,vue,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{scss,less,css,html,md}": [
      "prettier --write"
    ],
    "package.json": [
      "prettier --write"
    ],
    "{!(package)*.json,.!(browserslist)*rc}": [
      "prettier --write--parser json"
    ]
  }
}
